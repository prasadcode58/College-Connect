<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vidlec.VidLecActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vierplogo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/vierp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#F98012"/>

            <TextView
                android:id="@+id/vierp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:text="B.R.A.C.T's Vishwakarma Institute of Information Technology's official student page! One stop destination where students can get much more content in one place! (Click On logo to open here / Click here to open in browser.)"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@string/light"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/viitlogo"
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/vitsitelogo" />


                <TextView
                    android:id="@+id/viittit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@string/bold"
                    android:text="B.R.A.C.T's VIIT Kondwa"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="@color/collred"/>

            <TextView
                android:id="@+id/viitdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:text="Vishwakarma Institute of information Technology's official website for exploring collage and branches! Please visit and contact us if you also want to create a successful future! Contact us today regarding admission queries by visiting here!(Click On logo to open here / Click here to open in browser.)"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@string/light"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vitlogo"
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/vitsitelogo" />


                <TextView
                    android:id="@+id/vittit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@string/bold"
                    android:text="B.R.A.C.T's VIT Bibwewadi"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#8E0004"/>

            <TextView
                android:id="@+id/vitdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:text="Vishwakarma Institute of Technology's official website where you can get each and everything regarding VIT's all Collages, Branches, Institutes and Schools! Visit us today for exploring the world of education! No matter what is your or your child's age, your knowledge will never stop here!(Click On logo to open here / Click here to open in browser.)"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@string/light"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>